net: "models/pointnet_cls_basic.prototxt"
test_iter: 78 # 2468 testing
test_interval: 1000
base_lr: 0.001
momentum: 0.9
momentum2: 0.999
# since Adam dynamically changes the learning rate, we set the base learning
# rate to a fixed value
#lr_policy: "fixed"
lr_policy: "step"
gamma: 0.5
stepsize: 6000

display: 100
max_iter: 80000 # 9843 training, 250 epochs
weight_decay: 0.0005
snapshot: 40000
snapshot_prefix: "snapshots/pointnet_cls_basic"
type: "Adam"
solver_mode: GPU